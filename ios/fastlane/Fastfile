# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)
xcversion(version: "~> 10")

platform :ios do
  desc "Push a new beta build to TestFlight"
  lane :build do
    build_app(scheme: "Egendata")
  end

  lane :ios_testflight do
    increment_build_number(xcodeproj: "Egendata.xcodeproj")

    # Install the required certificates and profile

    setup_travis
    match(
      type: "development", 
      readonly: true, 
    )

    disable_automatic_code_signing(path: xcode_project_path)

    update_project_team(
      path: '../Egendata/Egendata.xcodeproj',
      teamid: "BSE2J6442R" # Use your developer team ID
    )

    # The "match" step sets environment variables with paths for all provisioning profiles.
    # You can find the exact name of the variable in the log generated by "match".

    provisioning_profile_path = ENV["sigh_com.egendata.ios_development_profile-path"]

    update_project_provisioning(
      xcodeproj: xcode_project_path,
      profile: provisioning_profile_path,
      build_configuration: "Release",
      code_signing_identity: 'iPhone Development'
    )

    # Build and deploy to TestFlight
    build_app(scheme: "Egendata", export_method: "development")
    upload_to_testflight
  end

  lane :beta do
    increment_build_number(xcodeproj: "Egendata.xcodeproj")
    build_app(scheme: "Egendata")

    upload_to_testflight
  end
end
